FROM node:16-slim
ARG FOLDER=virta
EXPOSE 4000
WORKDIR /src
COPY ${FOLDER} ${FOLDER}
COPY api.ts api.ts
COPY constants.ts constants.ts
COPY websocket.ts websocket.ts
COPY package.json package.json
COPY tsconfig.json tsconfig.json
RUN npm i
WORKDIR /src/${FOLDER}

RUN ls -lha \
&& npm run build_endorser \
&& cd .. \
&& ls -lha
WORKDIR /src
RUN ls -lha bin
CMD [ "node",  "bin/virta/index.js" ]
